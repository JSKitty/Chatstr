{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vector",
  "identifier": "com.chatstr.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vector",
        "minWidth": 375,
        "width": 375,
        "minHeight": 550,
        "height": 650,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
